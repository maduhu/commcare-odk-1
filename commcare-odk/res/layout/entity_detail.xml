<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/entity_detail"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

   <org.commcare.android.view.TabbedDetailView
       android:id="@+id/entity_detail_tabs"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical"
       android:layout_above="@+id/entity_detail_bottom_pane" />
	
	<FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/entity_detail_bottom_pane"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/border_top_black"
	    android:paddingTop="1dp">
	
	    <Button 
	        android:layout_height="wrap_content" 
	        android:text="Select" 
	        android:layout_width="fill_parent" 
	        android:id="@+id/entity_select_button"
	        android:textSize="@dimen/text_large"
	    ></Button>

	</FrameLayout>

</RelativeLayout>
